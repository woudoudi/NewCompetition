<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true">

    <include layout="@layout/title_layout_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f0f0f0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_nick"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这只是个名称"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f0f0f0" />

    <RelativeLayout
        android:id="@+id/rl_clear"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_cache"
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48.25MB"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0">

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:background="@color/color_BCA081"
            android:text="退出"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>