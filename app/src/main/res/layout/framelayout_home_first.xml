<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="44dp">
        
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="17dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/integral_bg">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/integral"/>

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1565"
                android:textSize="11sp"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_custom"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/custom"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:src="@mipmap/trumpet" />

        <TextView
            android:id="@+id/tv_trumpet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这只是个滚动通知"
            android:textSize="15sp"
            android:textColor="@color/color_66678F"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/rl_king_mode"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="44dp"
        android:background="@mipmap/king_layout">

        <TextView
            android:id="@+id/tv_king_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王者专场"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tv_king_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世界杯模式，好玩到爆（内有自由对抗）"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/tv_king_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_guess_mode"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/trumpet_layout">

        <TextView
            android:id="@+id/tv_trumpet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全民竞猜"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tv_trumpet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/tv_trumpet_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</LinearLayout>