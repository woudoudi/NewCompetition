<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1E1F24"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/tv_land_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close_white"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/integral_bg"
                android:gravity="center"
                android:minHeight="17dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/integral" />

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="1565"
                    android:textColor="@color/color_333333"
                    android:textSize="11sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/more"
                android:layout_centerVertical="true"
                android:padding="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bet_text_bg_press"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:paddingTop="2dp"
                android:paddingRight="9dp"
                android:paddingBottom="2dp"
                android:text="初级场"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bet_text_bg_press"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:paddingTop="2dp"
                android:paddingRight="9dp"
                android:paddingBottom="2dp"
                android:text="中级场"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bet_text_bg_press"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:paddingTop="2dp"
                android:paddingRight="9dp"
                android:paddingBottom="2dp"
                android:text="高级场"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameLayout_land_video_bet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="35dp"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/text_1_bg"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_rule_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1E1F24"
        android:alpha="0.9"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close_white"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押注规则"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.每人每天下注数10场次\n2.游戏开始前1分钟停止下分押注\n3.结果13,14就是平局，积分返回账户\n4.每题间隔20秒，前10秒押注，后10秒封盘\n5.平台收取10%费用，自动扣除"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</FrameLayout>