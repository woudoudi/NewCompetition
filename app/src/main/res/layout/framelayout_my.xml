<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="30dp">
        
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这只是个名称"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f0f0f0" />

    <RelativeLayout
        android:id="@+id/rl_integral"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_integral"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:src="@mipmap/integral" />

        <TextView
            android:layout_toRightOf="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_recharge"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_recharge"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:src="@mipmap/chongzhi" />

        <TextView
            android:layout_toRightOf="@+id/iv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_invite"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_invite"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:src="@mipmap/invite" />

        <TextView
            android:layout_toRightOf="@+id/iv_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_bet"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_yazhu"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:src="@mipmap/yazhu" />

        <TextView
            android:layout_toRightOf="@+id/iv_yazhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押注记录"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f0f0f0" />

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_toRightOf="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0"/>

</LinearLayout>