<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal">

    <include layout="@layout/title_layout"/>

    
    <TextView
        android:layout_width="264dp"
        android:layout_height="69dp"
        android:background="@mipmap/login_sign"
        android:text="全名竞技"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/et_bg"
        android:hint="请输入手机号"
        android:gravity="center"
        android:textSize="15sp"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLength="11"
        android:textColorHint="@color/color_666666"
        android:layout_marginTop="57dp"/>


    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/et_bg"
        android:hint="请输入密码"
        android:gravity="center"
        android:textSize="15sp"
        android:singleLine="true"
        android:textColorHint="@color/color_666666"
        android:layout_marginTop="15dp"/>
    
    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/login_input_selector"
        android:layout_marginTop="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="11sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/color_3CA9CC"
            android:layout_marginLeft="63dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/color_3CA9CC"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textSize="11sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/color_3CA9CC"
            android:layout_alignParentRight="true"
            android:layout_marginRight="63dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <View
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/color_3CA9CC"
            android:layout_marginLeft="62dp"/>

        <TextView
            android:id="@+id/tv_third_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textSize="11sp"
            android:textColor="@color/color_3CA9CC"
            android:layout_marginLeft="63dp"
            android:layout_centerInParent="true"/>

        <View
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/color_3CA9CC"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_third_login"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@mipmap/weixin"
        android:layout_marginTop="20dp" />
</LinearLayout>